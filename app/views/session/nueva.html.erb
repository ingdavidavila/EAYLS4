<h1 class="text-center mt-4">Ingresa A Tu Cuenta</h1>
<div class= "container" id="home-container">
<%= form_with(scope: :session, url: ingresar_path, local: true)  do |f| %>

  <div class="form-group row">
    <%= f.label :email, class: "col-form-label" %><br/>
    <%= f.email_field :email, class: "form-control", placeholder: "Aqui Va Tu E-mail" %>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: "col-form-label" %><br/>
    <%= f.password_field :password, class: "form-control", placeholder: "Aqui Va Tu Contrasena" %>
  </div>

  <div class="form-group row justify-content-center">
    <%= f.submit "ingresar", class: "btn btn-outline-light btn-lg" %>
  </div>

</div>
<% end %>
